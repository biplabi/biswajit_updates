package com.gravity.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.gravity.model.Customer;
import com.gravity.repository.CustomerRepository;

@Service
public class CustomerService 
{
	@Autowired
	private CustomerRepository customerRepo;
	
	public String saveCustomer(Customer c)
	{
		Customer cust = this.customerRepo.save(c);
		
		return "The customer is registered with customer id: " + cust.getId(); 
	}
	
	public List<Customer> getAllCustomers()
	{
		return this.customerRepo.findAll();
	}
	
	public String updateCustomer(int id, Customer c)
	{
		Customer cust = this.customerRepo.getById(id);
		
		cust.setName(c.getName());
		cust.setEmail(c.getEmail());
		
		this.customerRepo.save(cust);
		
		return id + " customer is updated.";
	}
}
